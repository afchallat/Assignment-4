<div class="row">
    <div class="col-md-12">
        <br>
        <h2>{{course.courseDescription}}</h2>
        <hr />
        <form action="/course/update" method="post">
            <div class="row">
                <div class="col-md-1">
                    <div class="form-group">
                        <input class="form-control" id="courseId" name="courseId" type="hidden" value="{{course.courseId}}" />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Course Code</label>
                        <input class="form-control" id="courseCode" name="courseCode" type="text" value="{{course.courseCode}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Course Description</label>
                        <input class="form-control" id="courseDescription" name="courseDescription" type="text" value="{{course.courseDescription}}" />
                    </div>
                </div>
            </div>
            <hr />
            <input type="submit" class="button btn btn-primary float-right" value="Update Course" />
        </form>
    </div>
</div>
